{
  "compilerOptions": {
    "target": "es2020", // Specifies the ECMAScript target version
    "module": "esnext", // Defines the module system
    "lib": ["dom", "dom.iterable", "esnext"], // Specifies the set of available library files (includes DOM APIs)
    "jsx": "react-jsx", // Crucial for React: specifies the JSX compiler to use
    "strict": true, // Enables all strict type-checking options
    "esModuleInterop": true, // Simplifies interoperability between CommonJS and ES Modules
    "skipLibCheck": true, // Skips type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensures consistent file naming
    "moduleResolution": "node", // Ensures correct module resolution, common for bundlers
    "resolveJsonModule": true, // Allows importing JSON modules
    "isolatedModules": true, // Ensures each file can be safely transpiled without relying on other files
    "noEmit": false, // Important: TypeScript only performs type checking, the bundler (like Webpack/Vite) handles the actual JavaScript output
    "allowJs": true, // Allows JavaScript files to be included in the project
    "outDir": "./dist", // Output directory for compiled files (if noEmit is false)
    "sourceMap": true // Generates corresponding .map files
  },
  "include": ["src"], // Only include files within the 'src' directory
  "exclude": ["node_modules"] // Exclude the node_modules directory
}